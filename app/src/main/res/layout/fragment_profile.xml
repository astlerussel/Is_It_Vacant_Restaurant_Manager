<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Profile"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
         android:textColor="#FF7043"
        />


    <TextView
        android:id="@+id/food_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="left|center"
        android:elevation="10dp"
        android:textSize="18dp"
        android:hint="Name of the Restaurant"
        android:layout_below="@+id/profile"
      />
    <LinearLayout
        android:layout_below="@+id/food_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="#60000000"
        />
    <TextView
        android:id="@+id/Res_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="left|center"
        android:elevation="10dp"
        android:textSize="18dp"
        android:layout_below="@+id/food_title"
        android:hint="Type of Restaurant"
        />
    <LinearLayout
        android:layout_below="@+id/Res_type"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="#60000000"
        />
    <TextView
    android:id="@+id/Mobile_Number"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:padding="5dp"
    android:gravity="left|center"
    android:elevation="10dp"
    android:textSize="18dp"
    android:layout_below="@+id/Res_type"
    android:hint="Mobile Number"
   />
    <LinearLayout
        android:layout_below="@+id/Mobile_Number"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="#60000000"
        />
    <TextView
        android:id="@+id/Res_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="left|center"
        android:elevation="10dp"
        android:textSize="18dp"
        android:layout_below="@+id/Mobile_Number"
        android:hint="Restaurant Address"
        />
    <LinearLayout
        android:layout_below="@+id/Res_address"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="#60000000"
        />
    <TextView
        android:id="@+id/Res_Category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="left|center"
        android:elevation="10dp"
        android:textSize="18dp"
        android:layout_below="@+id/Res_address"
        android:hint="Restaurant Category"
        />
    <LinearLayout
        android:layout_below="@+id/Res_Category"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="#60000000"
        />
    <Button
        android:id="@+id/Edit_profile"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@id/Res_Category"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:background="#FF7043"/>
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="63dp"
        android:background="@drawable/style_gradient"
        android:text="Logout"
        android:textColor="#fff"
        android:textStyle="bold"/>


</RelativeLayout>