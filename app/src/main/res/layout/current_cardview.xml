<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/current_reservation_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <TextView
            android:id="@+id/resto_Title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:text="Chowks Food Court"
            android:textColor="#FF6D00"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:gravity="left|center"
            android:text="Chiranthan M V"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:text="11/09/1998"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Time"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="65dp"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:text="12:06 PM"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95dp"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:text="Guests :"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Guests"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="95dp"
            android:gravity="left|center"
            android:text="3"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="125dp"
            android:gravity="left|center"
            android:text="Table No :"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Table_No"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="125dp"
            android:gravity="left|center"
            android:text="T1"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Location"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="155dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:gravity="left|center"
            android:text="Near Ballabagh, Mangalore"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="185dp"
            android:gravity="left|center"
            android:text="Payment :"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="185dp"
            android:gravity="left|center"
            android:text="25"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="295dp"
            android:src="@drawable/star" />

    </androidx.cardview.widget.CardView>



</LinearLayout>