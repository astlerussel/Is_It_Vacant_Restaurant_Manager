<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="wrap_content">
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".current_onclick_cardview">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarlayout"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:contentScrim="@color/ic_launcher_background"
            android:layout_marginLeft="-10dp"
            app:expandedTitleMargin="16dp"
            android:background="@drawable/summary"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#099ae1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Summary"
                    android:textAllCaps="true"
                    android:textSize="23dp"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="#fff"

                    />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:cardElevation="10dp"

        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_back4"
            android:backgroundTintMode="multiply"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Name"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center"
                    />
                <TextView
                    android:id="@+id/Username2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="Chiranthan"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="60dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Mobile No"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:gravity="left|center"
                    />
                <TextView
                    android:id="@+id/Mobile_No2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="10dp"
                    android:text="8105846748"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="120dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Hotel Name"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="125dp"
                    android:gravity="left|center"
                    />
                <TextView
                    android:id="@+id/hotel_name2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="10dp"
                    android:text="Chowks Food Court"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="175dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Reservation Date"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="180dp"
                    android:gravity="left|center"
                    />

                <TextView
                    android:id="@+id/Reservation_date2"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="195dp"
                    android:layout_marginLeft="10dp"
                    android:text="11/09/2020"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="185dp"
                    android:layout_marginLeft="180dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Reservation Time"
                    android:textStyle="bold"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="180dp"
                    android:gravity="left|center"
                    />
                <TextView
                    android:id="@+id/Reservation_time2"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="195dp"
                    android:layout_marginLeft="200dp"
                    android:text="12:00 AM"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="225dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Table No"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="230dp"
                    android:gravity="left|center"
                    />

                <TextView
                    android:id="@+id/Table_no2"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="245dp"
                    android:layout_marginLeft="10dp"
                    android:text="T1"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="235dp"
                    android:layout_marginLeft="180dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Guests"
                    android:textStyle="bold"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="230dp"
                    android:gravity="left|center"
                    />
                <TextView
                    android:id="@+id/no_of_guests2"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="245dp"
                    android:layout_marginLeft="200dp"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="275dp"
                    android:background="#60000000"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="Hotel Location"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="280dp"
                    android:gravity="left|center"
                    />

                <TextView
                    android:id="@+id/Location2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="295dp"
                    android:layout_marginLeft="10dp"
                    android:text="Near ballabagh, Mangalore"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:gravity="left|center"/>



            </androidx.cardview.widget.CardView>



        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="Booking Info"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:gravity="left|center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <include

            layout="@layout/menu_info" />




    </androidx.cardview.widget.CardView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>