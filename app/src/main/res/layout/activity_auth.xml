<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".AuthActivity">

    <TextView
        android:id="@+id/verify_your_phone_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:text="Verify your phone"
        android:textColor="#67E6DC"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/discptn_text_for_verif_phon_txt"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_your_phone_txtview"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="We will send SMS message to verify your phone number.Select your country and enter your phone number."
        android:textAlignment="center"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/country_names_spinner"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_below="@+id/discptn_text_for_verif_phon_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/reg_edittext_style" />

    <EditText
        android:id="@+id/enter_phone_no_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_names_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/reg_edittext_style"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColorLink="#000000"

        />

    <Button
        android:id="@+id/nxt_btn_to_verif_phone"
        android:layout_width="183dp"
        android:layout_height="42dp"
        android:layout_below="@+id/enter_phone_no_field"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/create_new_bill_button_style"
        android:text="NEXT"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>