<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopDishes">

    <TextView
        android:id="@+id/Top_dishes_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="Please Provide details Your Top Dishes"
        android:textColor="#FF6D00"
        android:textSize="22sp" />
    <Button
        android:id="@+id/add_dish_photo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add Dish Photo"
        android:textSize="13dp"
        android:elevation="20dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/Top_dishes_details_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/style_gradient"
        android:textColor="#fff"
        android:drawableStart="@drawable/ic_add_black_24dp"
        />
    <EditText
        android:id="@+id/food_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:elevation="10dp"
        android:layout_below="@+id/add_dish_photo"
        android:hint="Enter the Name of the Dish"
        android:background="@drawable/rounded_edit_text"/>
    <RelativeLayout
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/food_title"
        android:layout_marginRight="10dp">
        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:entries="@array/dish_type"
            android:background="@drawable/rounded_edit_text"
            android:elevation="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="350dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_drop_down_black_24dp" />
    </RelativeLayout>
    <EditText
        android:id="@+id/enter_cost_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:gravity="center|start"
        android:layout_below="@+id/spinner1"
        android:hint="Enter The Dish Cost In Eupees"
        android:textSize="18dp"
        android:elevation="10dp"
        android:background="@drawable/rounded_edit_text"
        />
    <Button
    android:id="@+id/submit_food_bt"
    android:layout_width="183dp"
    android:layout_height="42dp"
    android:layout_below="@+id/enter_cost_field"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="8dp"
    android:layout_marginTop="28dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/style_gradient"
    android:text="SUBMIT"
    android:textColor="#ffffff"
        android:textStyle="bold"
    android:textSize="18sp" />


</RelativeLayout>